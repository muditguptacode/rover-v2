<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="inertial_macros.xacro" />

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>


    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="-0.225 0 0" />
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.225 0 0.09" />
            <geometry>
                <box size="0.450 0.23 0.18" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.225 0 0.09" />
            <geometry>
                <box size="0.450 0.23 0.18" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="5.0" x="0.450" y="0.23" z="0.18">
            <origin xyz="0.225 0 0.09" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- LEFT FRONT WHEEL LINK -->

    <joint name="left_front_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_front_wheel" />
        <origin xyz="0.175 0.175 .045" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
        <limit effort="1" velocity="1" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.1" />
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.1" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1.5" length="0.1" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_front_wheel">
        <material>Gazebo/Orange</material>
        <mu1 value="0.9" />
        <mu2 value="0.9" />
    </gazebo>

    <!-- LEFT BACK WHEEL LINK -->

    <joint name="left_back_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_back_wheel" />
        <origin xyz="-0.175 0.175 .045" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
        <limit effort="1" velocity="1" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="left_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.1" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.1" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1.5" length="0.1" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_back_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value="0.9" />
        <mu2 value="0.9" />
    </gazebo>

    <!-- RIGHT FRONT WHEEL LINK -->

    <joint name="right_front_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_front_wheel" />
        <origin xyz="0.175 -0.175 .045" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
        <limit effort="1" velocity="1" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.1" />
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.1" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1.5" length="0.1" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_front_wheel">
        <material>Gazebo/Orange</material>
        <mu1 value="0.9" />
        <mu2 value="0.9" />
    </gazebo>

    <!-- RIGHT BACK WHEEL LINK -->

    <joint name="right_back_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_back_wheel" />
        <origin xyz="-0.175 -0.175 .045" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
        <limit effort="1" velocity="1" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="right_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.1" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.1" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1.5" length="0.1" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_back_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value="0.9" />
        <mu2 value="0.9" />
    </gazebo>

</robot>